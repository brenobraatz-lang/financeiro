{
  "name": "sistema-financeiro",
  "version": "1.0.0",
  "description": "Sistema de Controle Financeiro para Escrit√≥rio",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --exec \"ts-node --transpile-only\" src/server.ts",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "cd client && npm ci && npm run build",
    "start": "node dist/server.js",
    "init:db": "ts-node --transpile-only src/database/init.ts",
    "migrate:db": "ts-node --transpile-only src/database/migrate.ts"
  },
  "keywords": [
    "financeiro",
    "controle",
    "despesas"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-cron": "^3.0.11",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.2.1",
    "socket.io": "^4.8.3",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/sqlite3": "^3.1.11",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
