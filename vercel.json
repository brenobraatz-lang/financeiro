{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/assets/(.*)", "dest": "/client/dist/assets/$1" },
    { "src": "/logo.webp", "dest": "/client/dist/logo.webp" },
    { "src": "/favicon.ico", "dest": "/client/dist/favicon.ico" },
    { "src": "/(.*)", "dest": "/client/dist/index.html" }
  ]
}
